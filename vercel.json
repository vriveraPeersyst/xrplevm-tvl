{
  "version": 2,
  "builds": [
    { "src": "package.json", "use": "@vercel/static-build" }
  ],
  "rewrites": [
    { "source": "/api/coingecko/:path*", "destination": "https://api.coingecko.com/:path*" },
    { "source": "/api/binance/:path*", "destination": "https://api.binance.com/:path*" },
    { "source": "/api/midas/:path*", "destination": "https://api-prod.midas.app/api/data/:path*" }
  ],
  "routes": [
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/index.html" }
  ],
  "outputDirectory": "dist"
}
